<BorderPane id="TableBackground" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="500.0" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <Label id="TitleLabel" alignment="CENTER" stylesheets="@../style/style.css" text="INTELLIGENT BRISCOLA">
               <font>
                  <Font name="Arial Bold Italic" size="20.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
   </top>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="CoolBtn" fx:id="btnScoreboard" mnemonicParsing="false" onMouseClicked="#goScoreboard" stylesheets="@../style/style.css" text="Scoreboard" />
            <Button id="CoolBtn" fx:id="btnStartMatch" mnemonicParsing="false" onMouseClicked="#startMatch" stylesheets="@../style/style.css" text="Start match" />
         </children>
      </HBox>
   </bottom>
   <center>
      <GridPane alignment="CENTER" hgap="20.0" vgap="20.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <BorderPane>
               <center>
                  <Label id="NormalLabel" stylesheets="@../style/style.css" text="Player name" BorderPane.alignment="BOTTOM_CENTER" />
               </center>
            </BorderPane>
            <BorderPane GridPane.columnIndex="1">
               <center>
                  <TextField fx:id="txtPlayerName" prefWidth="250.0" BorderPane.alignment="BOTTOM_LEFT" />
               </center>
            </BorderPane>
            <BorderPane GridPane.rowIndex="1">
               <center>
                  <Label id="NormalLabel" stylesheets="@../style/style.css" text="Bot Level" BorderPane.alignment="TOP_CENTER" />
               </center>
            </BorderPane>
            <BorderPane GridPane.columnIndex="1" GridPane.rowIndex="1">
               <center>
                  <ComboBox fx:id="comboBotLevel" prefWidth="250.0" promptText="Select Bot Level" BorderPane.alignment="TOP_LEFT" />
               </center>
            </BorderPane>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
</BorderPane>
